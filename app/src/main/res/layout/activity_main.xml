<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/utama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/angka"
        android:hint="Angka"
        android:layout_below="@+id/utama"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/btnSin"
        android:text="SIN"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/angka"
        android:textSize="25dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnCos"
        android:text="COS"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/btnSin"
        android:layout_below="@+id/angka"
        android:textSize="25dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnTan"
        android:text="TAN"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/angka"
        android:layout_toRightOf="@+id/btnCos"
        android:textSize="25dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnCsc"
        android:text="CSC"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/btnSin"
        android:textSize="25dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnSec"
        android:text="SEC"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/btnCos"
        android:layout_toRightOf="@+id/btnCsc"
        android:textSize="25dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnCot"
        android:text="COT"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/btnTan"
        android:layout_toRightOf="@+id/btnSec"
        android:textSize="25dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnLog"
        android:text="Logaritma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCot"
        android:textSize="25dp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/tHasil"
        android:text="0.0"
        android:layout_below="@+id/btnLog"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>